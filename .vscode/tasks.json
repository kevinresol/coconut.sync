	"version": "2.0.0",
	"tasks": [
		{
			"label": "run",
			"type":"shell",
			"command": "lix",
			"args": ["run", "travix", "node"],
			"problemMatcher": [
				"$haxe-absolute",
				"$haxe",
				"$haxe-error",
				"$haxe-trace"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}